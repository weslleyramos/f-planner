<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | gestão de finanças</title>

    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Raleway" rel="stylesheet">
    <link href="~/node_modules/bootstrap-dialog/dist/css/bootstrap-dialog.min.css" rel="stylesheet" />
    <link href="~/node_modules/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/node_modules/spectrum-colorpicker/spectrum.css" rel="stylesheet" />
    <link href="~/Content/css/app.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-white navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Finanças<!--Litz--></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Extrato", "Index", "Transaction")</li>
                    <li>@Html.ActionLink("Metas", "Index", "Goal")</li>
                    <li>@Html.ActionLink("Tags", "Index", "Group")</li>
                </ul>
                
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon glyphicon-align-justify"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Configurações</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@Url.Action("Logout", "Login")">Sair</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <div class="spinner-backdrop">
        <div class="spinner"></div>
    </div>


    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/node_modules/bootstrap-dialog/dist/js/bootstrap-dialog.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.src.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>
    <script src="https://code.highcharts.com/modules/solid-gauge.js"></script>
    <script src="https://code.highcharts.com/highcharts-3d.js"></script>
    <script src="~/node_modules/select2/dist/js/select2.min.js"></script>
    <script src="~/node_modules/spectrum-colorpicker/spectrum.js"></script>
    <script src="~/Content/js/utils.js"></script>
    <script src="~/Content/js/charts.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
