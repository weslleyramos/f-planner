@model IEnumerable<Litz.Services.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .tag {
        min-height: 100px;
    }

        .tag h2 {
            vertical-align: middle;
        }

    .tag-hover {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        -ms-transform: scaleY(0);
        -webkit-transform: scaleY(0);
        transform: scaleY(0);
        -ms-transform-origin: bottom center;
        -o-transform-origin: bottom center;
        -webkit-transform-origin: bottom center;
        transform-origin: bottom center;
        z-index: -1;
        -ms-transition: transform 0.3s;
        -o-transition: transform 0.3s;
        -webkit-transition: transform 0.3s;
        transition: transform 0.3s;
    }

    .tag:hover {
        color: #fff;
    }

        .tag:hover .tag-hover {
            -ms-transform: scaleY(1);
            -webkit-transform: scaleY(1);
            transform: scaleY(1);
        }
</style>

<h2>Tags</h2>

<a class="add-tag-btn" href="@Url.Action("Create")">Criar tag</a>

<div class="row">
    @{ var i = 1;}
    @foreach (var item in Model)
    {
        <div class="col-md-3 text-center tag" style="border-bottom: 10px solid @item.Color" data-href="@Url.Action("Edit", new {id = item.Id})">
            <h2>@item.Name</h2>
            <div class="tag-hover" style="background: @item.Color"></div>
        </div>
        if (i % 4 == 0)
        {
            <div class="row" style="margin-top: 170px;"></div>
        }
        i++;
    }
</div>

@section scripts
{
    <script type="text/javascript">
        (function (app, $) {

            var utils = new app.Utils();

            $(document).ready(function () {

                $('.add-tag-btn').on('click', function (e) {
                    e.preventDefault();
                    var pageUrl = $(this).prop('href');

                    utils.showSpinner();
                    $.get(pageUrl, function (page) {
                        utils.hideSpinner();

                        BootstrapDialog.show({
                            title: 'Adicionar tag',
                            message: $('<div></div>').html(page),
                            type: BootstrapDialog.TYPE_DEFAULT,
                            buttons: [{
                                label: 'Fechar',
                                action: function (dialog) {
                                    window.location.href = window.location.href;
                                }
                            }]
                        });
                    });
                });

                $('.tag').on('click', function (e) {
                    e.preventDefault();
                    var pageUrl = $(this).data('href');

                    utils.showSpinner();
                    $.get(pageUrl,
                        function(page) {
                            utils.hideSpinner();

                            BootstrapDialog.show({
                                title: 'Editar tag',
                                message: $('<div></div>').html(page),
                                type: BootstrapDialog.TYPE_DEFAULT,
                                buttons: [
                                    {
                                        label: 'Fechar',
                                        action: function(dialog) {
                                            window.location.href = window.location.href;
                                        }
                                    }
                                ]
                            });
                        });
                });
            });

        }(AppLitz, jQuery));
    </script>
}